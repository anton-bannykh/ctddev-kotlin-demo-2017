<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pavel.homework2.MainActivity">

    <Button
        android:id="@+id/butUnion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickUnion"
        android:text="Union(a, b)"
        app:layout_constraintBottom_toTopOf="@+id/butIsCommon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/butIsCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickIsCommonSet"
        android:text="Is  Common Set(A, B)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/butCleanUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickCleanUp"
        android:text="Clean up"
        app:layout_constraintBottom_toTopOf="@+id/butUnion"
        app:layout_constraintEnd_toStartOf="@+id/butAddSet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSize" />

    <Button
        android:id="@+id/butAddSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAddSet"
        android:text="Add Set"
        app:layout_constraintBottom_toTopOf="@+id/butUnion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/butCleanUp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSize" />

    <EditText
        android:id="@+id/editParamA"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="122dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textViewSize"
        app:layout_constraintEnd_toStartOf="@+id/editParamB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editParamB"
        android:layout_width="67dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textViewSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editParamA"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/staticTextViewB"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:text="B:"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editParamB"
        app:layout_constraintEnd_toStartOf="@+id/editParamB"
        app:layout_constraintTop_toTopOf="@+id/editParamB" />

    <TextView
        android:id="@+id/staticTextViewA"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:text="A:"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editParamA"
        app:layout_constraintEnd_toStartOf="@+id/editParamA"
        app:layout_constraintTop_toTopOf="@+id/editParamA"
        app:layout_constraintVertical_bias="0.145" />

    <TextView
        android:id="@+id/textViewSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="45dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/butUnion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
