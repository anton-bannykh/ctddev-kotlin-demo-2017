<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demo.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="95dp">

        <EditText
            android:id="@+id/From"
            android:layout_width="105dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="1" />

        <Button
            android:id="@+id/rButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gButton"
            android:text="find distance" />

        <TextView
            android:id="@+id/randomTestText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gButton"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/gButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate" />

        <EditText
            android:id="@+id/To"
            android:layout_width="105dp"
            android:layout_height="46dp"
            android:layout_alignEnd="@+id/rButton"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/rButton"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="1"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="449dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/To"
            android:layout_alignStart="@+id/To"
            android:text="To"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="430dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/From"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="From"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="430dp" />

        <TextView
            android:id="@+id/rText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView10"
            android:layout_toRightOf="@+id/To"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/To"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_toEndOf="@+id/To"
            android:layout_toRightOf="@+id/To"
            android:text="Result"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
